#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    for(int i = 0; i < 3; i++) {
        pid_t pid = fork();

        if(pid == 0) {
            printf("Child %d exiting\n", getpid());
            exit(0);
        }
    }

    int status;
    pid_t child;
    while((child = wait(&status)) > 0) {
        printf("Cleaned child PID: %d\n", child);
    }

    return 0;
}

